@{
    ViewBag.Title = "Register";
}
@{
    Layout = null;
}

@using System.Web.Optimization
@model WebApplication2.Models.UserRegister




<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                  
                </div>
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h1 class="fs-4 card-title fw-bold mb-4">Register</h1>

                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @id = "RegisterForm" }))
                        {
                            @Html.AntiForgeryToken()



                            <form method="POST" class="needs-validation" novalidate="" autocomplete="off">
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="name">Name</label>


                                    @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Credential, new
                               {
                                   placeholder = "Unaalta",
                                   title = "Please enter you username",
                                   value = "",
                                   name = "username",
                                   id = "username",
                                   @class = "form-control"
                               })

                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Email, new
                                   {
                                       placeholder = "example@gmail.com",
                                       title = "Please enter you email",
                                       value = "",
                                       name = "email",
                                       id = "email",
                                       @class = "form-control"
                                   })
                                    </div>


                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Password, new
                                   {
                                       @class = "form-control",
                                       type = "password",
                                       title = "Please enter your password",
                                       placeholder = "******",
                                       value = "",
                                       name = "password",
                                       id = "password"
                                   })
                                    </div>

                                    <p class="form-text text-muted mb-3">
                                        By registering you agree with our terms and condition.
                                    </p>



                                    <div class="align-items-center d-flex">
                                        <button type="submit" class="btn btn-primary ms-auto">
                                            Register
                                        </button>
                                    </div>
                                    </div>
                            </form>
                            
                                }
                            </div>
                            <div class="card-footer py-3 border-0">
                                <div class="text-center">
                                    Already have an account? <a href="@Url.Action("log","log")" class="text-dark">Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-5 text-muted">
                        
                    </div>
                </div>
            </div>
       
    
</section>






